<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:text="Story App"
        android:textStyle="bold"
        android:textSize="28dp"
        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/titre"
        android:layout_marginRight="20dp"
        android:src="@drawable/baseline_person_24"
        />

    <TextView
        android:id="@+id/favori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titre"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/titre"
        android:text="Favorite stories"
        android:textSize="18dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favori_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favori"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        />
    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favori_list"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="50dp"
        android:text="let's explore \n other stories"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/t1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/baseline_search_24" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RecyclerView_main"
        android:layout_below="@+id/t1"
        android:layout_margin="20dp"
        android:padding="10dp"
        >

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>