<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/teal_200">

        <ImageView
            android:id="@+id/imgScence"
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/img" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_toRightOf="@id/imgScence"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp"
            android:text="Sence 1"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgScence"
            android:layout_alignLeft="@id/imgScence"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:text="Sence 1" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t2"
            android:layout_alignRight="@id/t2"
            android:layout_marginRight="20dp"
            android:text="Lire la suite"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>